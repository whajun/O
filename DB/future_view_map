    <script>
        document.addEventListener('DOMContentLoaded', () => {
            
            const palette = {
                primary: '#F94144',
                secondary: '#F3722C',
                tertiary: '#F8961E',
                quaternary: '#F9C74F',
                green: '#90BE6D',
                teal: '#43AA8B',
                blue: '#577590',
                gray: '#E9ECEF'
            };

            const commonTooltipConfig = {
                callbacks: {
                    title: function(tooltipItems) {
                        const item = tooltipItems[0];
                        let label = item.chart.data.labels[item.dataIndex];
                        if (Array.isArray(label)) {
                          return label.join(' ');
                        } else {
                          return label;
                        }
                    }
                }
            };

            const genAiCtx = document.getElementById('genAiChart')?.getContext('2d');
            if (genAiCtx) {
                new Chart(genAiCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['GenAI 사용 기업 (2026년)', '미사용 기업'],
                        datasets: [{
                            data: [80, 20],
                            backgroundColor: [palette.primary, palette.gray],
                            hoverOffset: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        cutout: '60%',
                        plugins: {
                            legend: {
                                position: 'bottom',
                            },
                            title: {
                                display: true,
                                text: '2026년 GenAI 기업 도입률 (80%)',
                                padding: { top: 10, bottom: 10 }
                            },
                            tooltip: commonTooltipConfig
                        }
                    }
                });
            }
            
            const cloudCtx = document.getElementById('cloudChart')?.getContext('2d');
            if (cloudCtx) {
                new Chart(cloudCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['ICP 활용 기업 (2027년)', '미활용 기업'],
                        datasets: [{
                            data: [50, 50],
                            backgroundColor: [palette.secondary, palette.gray],
                            hoverOffset: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        cutout: '60%',
                        plugins: {
                            legend: {
                                position: 'bottom',
                            },
                            title: {
                                display: true,
                                text: '2027년 산업 클라우드 활용률 (50%)',
                                padding: { top: 10, bottom: 10 }
                            },
                            tooltip: commonTooltipConfig
                        }
                    }
                });
            }

            const platformCtx = document.getElementById('platformChart')?.getContext('2d');
            if (platformCtx) {
                new Chart(platformCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['플랫폼 엔지니어링 구축 (2026년)', '미구축'],
                        datasets: [{
                            data: [80, 20],
                            backgroundColor: [palette.tertiary, palette.gray],
                            hoverOffset: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        cutout: '60%',
                        plugins: {
                            legend: {
                                position: 'bottom',
                            },
                            title: {
                                display: true,
                                text: '2026년 플랫폼 엔지니어링 구축률 (80%)',
                                padding: { top: 10, bottom: 10 }
                            },
                            tooltip: commonTooltipConfig
                        }
                    }
                });
            }
            
            const comparisonBarCtx = document.getElementById('comparisonBarChart')?.getContext('2d');
            if (comparisonBarCtx) {
                new Chart(comparisonBarCtx, {
                    type: 'bar',
                    data: {
                        labels: [
                            ['GenAI 기업 사용률', '(2026)'], 
                            ['산업 클라우드 활용률', '(2027)'], 
                            ['플랫폼 엔지니어링', '구축률 (2026)']
                        ],
                        datasets: [{
                            label: '예상 도입률 (%)',
                            data: [80, 50, 80],
                            backgroundColor: [
                                palette.primary,
                                palette.secondary,
                                palette.tertiary
                            ],
                            borderColor: [
                                palette.primary,
                                palette.secondary,
                                palette.tertiary
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                max: 100,
                                ticks: {
                                    callback: function(value) {
                                        return value + '%'
                                    }
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            },
                            title: {
                                display: true,
                                text: '주요 기술별 기업 도입률 예측 (%)',
                                padding: { top: 10, bottom: 20 },
                                font: { size: 16 }
                            },
                            tooltip: commonTooltipConfig
                        }
                    }
                });
            }

        });
    </script>
    
    <!-- NEITHER Mermaid JS NOR SVG were used. All charts are rendered on Canvas. Diagrams are HTML/CSS. -->
